int ar1 [] = {1 , 2, 3, 45, 7};
int ar2[] = {10 , 20 , 30 , 40 , 50};

int newAr [] = new int [ar1.length + ar2.length ];

for( int i = 0 ; i < ar1.length ; i++){
    newAr[i] = ar1[i];
    newAr[i + ar1.length ] = ar2[i];
}
System.out.println(Arrays.toString(newAr));


int ch[] = {'a' , 'b' , 'c' , 'a' , 'a' , 'c' , 'b'};
int val[] = {10 , 3 ,   6 ,   7,    8 ,  3,  2147483647};
double A = Integer.MAX_VALUE;
double B = Integer.MAX_VALUE;
int C = Integer.MAX_VALUE;     // to find min value

for( int i = 0 ; i < ch.length ; i++){
    if( ch[i] == 'a' && A > val[i] ) A = val[i];
    else if ( ch[i] == 'b' && B >  val[i] )B = val[i];
    else if( ch[i] == 'c' && C > val[i] ) C = val[i];
}

double d = A + B ;
System.out.println( (int)Math.min( d , C ));
System.out.println(Integer.MAX_VALUE);


----- Multiplication of prev and next -----------------------------------------------

        int ar [] = {2 , 5, 7, 4, 8, 9};   // op - [10, 14, 20, 56, 36, 72]
        int prev = ar[0];
        ar[0] *= ar[1];

        for( int i = 1 ; i < ar.length -1 ; i++ ){
            int save = ar[i];
            ar[i] = prev * ar[i+1];
            prev = save ;
        }

        ar[ar.length -1 ] *= prev ;
        System.out.println(Arrays.toString(ar));


//  cognito_codex - 77
        
       int arr[] = {4, 8, 6, 1, 5};
        int sum = 0 ;
       for(int i = 0 ; i < arr.length ; i++){
        int mindiff = Integer.MAX_VALUE;

           for( int j = 0 ; j < arr.length ; j++){
               if( i != j && mindiff > Math.abs(arr[i] - arr[j]) ){
                   mindiff = Math.abs(arr[i] - arr[j]);
               }
           }
           System.out.println(mindiff);
           sum += mindiff ;
       }
       System.out.println( "sum - " + sum);









    }
}
